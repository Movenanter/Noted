# Noted Environment Configuration
# Copy this file to .env.local and configure your API keys

# AI Service Configuration
# Choose your AI provider: openai, anthropic, or custom
VITE_AI_PROVIDER=openai
VITE_AI_API_ENDPOINT=https://api.openai.com/v1
VITE_AI_API_KEY=your_openai_api_key_here

# Mentra Live Glasses Integration
VITE_MENTRA_LIVE_API_ENDPOINT=https://api.mentralive.com/v1
VITE_MENTRA_LIVE_API_KEY=your_mentra_live_api_key_here
VITE_MENTRA_LIVE_WS_URL=wss://api.mentralive.com/ws

# Feature Flags
VITE_ENABLE_AI_GENERATION=true
VITE_ENABLE_MENTRA_LIVE=true
VITE_ENABLE_ANALYTICS=false

# Application Configuration
VITE_APP_NAME=Noted
VITE_APP_VERSION=1.0.0
VITE_APP_ENV=development

# OpenAI Specific Settings (if using OpenAI)
VITE_OPENAI_MODEL=gpt-4
VITE_OPENAI_MAX_TOKENS=2000

# Anthropic Specific Settings (if using Anthropic)
VITE_ANTHROPIC_MODEL=claude-3-sonnet-20240229
VITE_ANTHROPIC_MAX_TOKENS=2000